@using HibernatingRhinos.Loci.Common.Models
@model LogOnModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>RaccoonBlog :: Login</title>
    
    <link rel="stylesheet" type="text/css" href="@Url.ActionLinkWithArray("Merge", "Css", new { files = new[] { "ResetCss.css", "custom/" + ViewBag.BlogConfig.CustomCss + ".settings.less.css", "base.less.css", "custom/" + ViewBag.BlogConfig.CustomCss + ".less.css" } })">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Areas/Admin/Content/css/AdminStyle.css")">
 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
</head>
<body id="login-bg">

    <div id="login-holder">

        <div class="clear">
        </div>
        <div id="loginbox">

            <article id="user-input" style="width: 350px">
                <form action="@Url.Action("Index")" method="post">
                    
                    <div id="logo-login">
                        <a Id="picture" style="color:#D68C22;font-size:large" href="@Url.RouteUrl("homepage")">
                            <img src="@Url.Content("~/Content/css/images/logo-admin.png")" width="51" height="50" alt="Logo">
                            <u id="alreadyText">Already signed in</u></a>
                    </div>
                    <br />
                    <br />

                    <div style="width: 350px; height: 200px">
                        <br />
                        <div style="float: left; padding-left: 17px; font-size: 16px" class="login-form">
                            <br />
                            <div id="id-form" style="top: 0;">
                               
                                <b>User&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</b>
                                @Html.TextBoxFor(x => x.Login, new { style = "width: 200px;" })<br />
                                <br />
                         
                                <b>Password&#160;&#160;&#160;&#160;</b>
                                @Html.TextBoxFor(x => x.Password, new { style = "width: 200px;", id = "password", type = "password" })
                                <br />
                                @Html.CheckBoxFor(x=>x.RememberMe)
                                @Html.LabelFor(x=>x.RememberMe)
                                @Html.HiddenFor(x => x.ReturnUrl)
                                <div id="errorDiv">
                                    <br />
                                    
                                    @if (ViewData.ModelState.IsValid == false)
                                    {                  
                                       
                                        <div class="form-error" style="color: red">

                                            @Html.ValidationSummary(false)
                                         

                                        </div>
                                    }
                                </div>
                                <div style="float: right; width: 600px">
                                    <input id="blockInput" style="width: 180px" type="submit" value="Login"><br /><br />

                                    <u><a href="#" id="forgotPassword" style="color: black">Forgot your pasword</a></u>
                                </div>
                            </div>
                        </div>

                        <div id="hidenDiv">


                            <div id="content-table-inner" class="inputform">

                                <div id="id-form">
                                    <div id="forgotbox-text">
                                        <p style="line-height: 2.0; color:#2a2828">Please enter your email and a new password will be sent to you</p>
                                    </div>
                                    @Html.TextBoxFor(x => x.Login, new { style = "width: 200px;" })
                                 
                                    <div>
                                        <br />
                                        <br />
                                        <input type="submit" value="Reset password" style="width: 180px;font-size: 15px;color:#393939;font-weight:normal";>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </form>

            </article>
            <div class="clear">
                &nbsp;
            </div>
            @section Script {

            }
        </div>
    </div>
</body>
</html>
<script type="text/javascript" src="@Url.Content("~/Content/js/showdown.js")"> </script>


<script type="text/javascript">
    function showText() {
        debugger;
        $("#hidenDiv").css("display", "normal");
    }
    $(function () {
       
        $('#forgotPassword').mouseover(function () { $(this).css({ "color": "#cb7b07" }) });
        $('#forgotPassword').mouseout(function () { $(this).css({ "color": "black" }) });
        $('#alreadyText').mouseover(function () { $(this).css({ "color": "#DD9227" }) });
        $('#alreadyText').mouseout(function () { $(this).css({ "color": "#cb7b07" }) });
        $("#hidenDiv").hide();
        $("#forgotPassword").toggle(function () { $("#hidenDiv").show() }, function () { $("#hidenDiv").hide() });
        var $textarea = $('textarea[name$="Body"]').keydown(function () {
            $('.markdown-preview-container').show('medium');
        });
        var $preview = $('.markdown-preview');
        var converter = new Showdown.converter();
        $textarea.keyup(function () {
            $preview.html(converter.makeHtml($textarea.val()));
        }).trigger('keyup');
    });
</script>
